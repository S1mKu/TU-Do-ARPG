        SMOOTH="$(echo $REPORTSET | cut -d ";" -f 4)"
        PH_SETS=$PH_SETS"\\\item $SIZE Messwerte, GlÃ¤ttung: $SMOOTH\\n"
    done

    # create subsections from single

        if ! test -f $REPORTDATADIR/$(echo $REPORTDATAFILE | cut -d ";" -f 1); then
            echo "File $(echo $REPORTDATAFILE | cut -d ";" -f 1) not found"
            echo
            exit 1
        fi  
    done

